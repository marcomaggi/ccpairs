  ccpairs_item_handler_t item_H[1];

  if (ccpairs_location(L)) @{
    cce_run_catch_handlers_final(L);
    exit(EXIT_FAILURE);
  @} else @{
    uintptr_t   item;
    ccpairs_t    P;

    item = item_constructor(L);
    ccpairs_clean_handler_item_init(L, item_H, item,
       item_destructor);

    P = ccpairs_cons(item, NULL);
    ccpairs_clean_handler_pair_init(L, pair_H, P);

    /* Do something with P here. */
    cce_run_body_handlers(L);
