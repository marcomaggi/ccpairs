                        ccpairs_list_item_handler_t * head_H)
/* Build the items and the list.  Upon exiting this block: we
   release the items and the second pair only if an error has
   occurred. */
@{
  cce_location_t              L[1];
  cce_handler_t               P_H[1], Q_H[1];
  ccpairs_item_handler_t       item_P_H[1], item_Q_H[1];

  if (ccpairs_location(L)) @{
    cce_run_catch_handlers_raise(L, upper_L);
  @} else @{
    uintptr_t item_P = item_constructor(L, item_P_H);
    uintptr_t item_Q = item_constructor(L, item_Q_H);
    ccpairs_t  Q = ccpairs_cons_error_handler(item_Q, NULL, Q_H);
    ccpairs_t  P = ccpairs_cons(item_P, Q);

    /* The pair P is the head of the list. */
    head = P;
    cce_run_body_handlers(L);
  @}

  ccpairs_clean_handler_list_item_init(upper_L, head_H, head,
     item_destructor);
  return head;
@}

